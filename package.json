{
	"name": "jojonomic-football",
	"version": "0.1.5",
	"private": true,
	"scripts": {
		"build": "vue-cli-service build",
		"lint": "eslint --ext .js,.ts,.vue src --format table",
		"deploy": "run-s deploy:*",
		"commit": "run-s git:*",
		"deploy:lint": "npm run lint",
		"deploy:version": "standard-version -a",
		"deploy:push": "git push --follow-tags",
		"dev": "vue-cli-service serve",
		"git:add": "git add .",
		"git:commit": "git-cz",
		"release": "run-s release:*",
		"release:lint": "npm run lint",
		"release:push": "git push"
	},
	"dependencies": {
		"@headlessui/vue": "^1.4.2",
		"@heroicons/vue": "^1.0.5",
		"axios": "^0.21.4",
		"core-js": "^3.6.5",
		"tailwind-config": "^0.1.2",
		"underscore": "^1.13.1",
		"vue": "^3.0.0",
		"vue-axios": "^3.4.0",
		"vue-router": "^4.0.0-0",
		"vuex": "^4.0.0-0"
	},
	"devDependencies": {
		"@vue/cli-plugin-babel": "~4.5.0",
		"@vue/cli-plugin-eslint": "~4.5.0",
		"@vue/cli-plugin-router": "~4.5.0",
		"@vue/cli-plugin-vuex": "~4.5.0",
		"@vue/cli-service": "~4.5.0",
		"@vue/compiler-sfc": "^3.0.0",
		"autoprefixer": "^9.8.8",
		"babel-eslint": "^10.1.0",
		"commitizen": "^4.2.4",
		"cz-conventional-changelog": "^3.0.1",
		"eslint": "^6.7.2",
		"eslint-config-airbnb-base": "14.2.0",
		"eslint-config-prettier": "6.14.0",
		"eslint-plugin-import": "^2.21.2",
		"eslint-plugin-prettier": "3.1.4",
		"eslint-plugin-vue": "^8.2.0",
		"lint-staged": "^9.5.0",
		"node-sass": "6.0.1",
		"npm-run-all": "^4.1.5",
		"prettier": "2.1.2",
		"sass-loader": "10.2.0",
		"standard-version": "^9.3.2",
		"tailwindcss": "npm:@tailwindcss/postcss7-compat@^2.2.17",
		"vue-cli-plugin-pug": "~2.0.0",
		"vue-cli-plugin-tailwind": "~2.0.6",
		"vue-template-compiler": "^2.6.11"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"gitHooks": {
		"pre-commit": "lint-staged"
	},
	"lint-staged": {
		"*.{js,jsx,vue}": [
			"vue-cli-service lint",
			"git add"
		]
	},
	"engines": {
		"node": "16.0.0",
		"npm": "7.10.0"
	}
}
